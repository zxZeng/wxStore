.container-box{
  background-color: white;
}

/*  导航标签  */
.navLabel{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: gainsboro;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.navText{
  font-size: 28rpx;
  color: #868686;
}
.active.navText{
  color: red;
}

/*  订单详细信息  */
.orderInfoFrame{
  margin: 30rpx 0;
  background-color: gainsboro;
}
.orderInfoOpt{
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background-color: white;
}

/*  订单状态及编号  */
.orderInfo{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.orderInfo text:nth-of-type(1){
  font-size: 24rpx;
  color:#323232;
}
.orderInfo text:nth-of-type(2){
  flex:1 1 20%;
  display: inline-block;
  font-size: 24rpx;
  color:#818181;
  text-align: right;
  padding-right: 60rpx;
  box-sizing: border-box;
}

/*  商品信息  */
.productInfoFrame{
  margin-top: 20rpx;
  width: 100%;
  /* background-color: white; */
}
.productInfoFrame::after{
  display: block;
  content: "";
  clear: both;
}
/*  商品图片  */
.productImgBox{
  float:left;
  width:160rpx;
  height: 160rpx;
}
.productImgBox image{
  display: block;
  width: 100%;
  height: 100%;
}
/*  商品名称  */
.productName{
  float: left;
  display: block;
  padding: 15rpx 0 0 20rpx ;
}
.productName text{
  font-size: 24rpx;
}
/*  商品价格&&数量  */
.productPrice{
  float: right;
  text-align: right;
  padding: 22rpx 0 0 20rpx ;
}
.productPrice text{
  display: block;
  font-size: 24rpx;
  color:#818181;
}
/*  商品合计  */
.totalFrame{
  width: 100%;
  padding: 0rpx 0 20rpx 0;
  text-align: right;
  border-bottom: 2rpx solid gainsboro;
  box-sizing: border-box;
}
.totalBox{
  display: inline-block;
}
.totalBox text{
  font-size: 24rpx;
}
.totalBox text:nth-of-type(1){
  margin-right: 30rpx;
}
/*  订单操作按钮  */
.btnFrame{
  width: 100%;
  text-align: right;
  padding: 10rpx;
}
.btnBox{
  display: inline-block;
}
.btnBox .btn{
  display: inline-block;
  text-align: left;
  font-size: 24rpx;
  border: 2rpx solid #323232;
  color: #323232;
  padding: 5rpx 20rpx;
  margin: 0 10rpx;
  border-radius: 4rpx;
}
 .btnBox .btn:nth-of-type(2){
  border: 2rpx solid red;
  color: red;
} 
/*  没有订单的提示  */
.noneOrderTip{
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #656565;
}
.noneOrderTip > text{
  display: block;
  margin-top: 30rpx;
}

/*  技术支持服务中心提示  */
.technicalTip{
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #656565;
}

.goShop > text{
  display: inline-block;
  padding: 4rpx 30rpx;
  background-color: orangered;
  font-size: 22rpx;
  color: white;
  border-radius: 8rpx;
}

.itemContainer{
  width: 100%;
  height: 110vh;
  margin: 100rpx 0 0 0;
}
.itemContainer::after{
  display: block;
  content: "";
  clear: both;
}























