.container-box{
  padding: 0 10rpx;
}
/*  关于我们的信息  */
.information{
  display: block;
  position: relative;
  padding: 14rpx 0;
}
.information:after{
  display: block;
  content: "";
  clear: both;
} 

.information > text{
  font-size: 22rpx;
  color: #535353;
  display: inline-block;
  position:relative;
  letter-spacing: 2rpx;
}

.information > text:nth-last-of-type(1){
  margin-left: 0;
  color: #818181;
  float: left;
  width: 400rpx;
}
.information > text:nth-last-of-type(2){
  float: left;
  margin-left: 100rpx;
  width: 120rpx;
  font-size: 22rpx;
  color: #a9a9a9;
}

