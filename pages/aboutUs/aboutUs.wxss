.information .contact{
  position: absolute;
  height: 60rpx; 
  right: 11%;
  bottom: -6rpx;
  font-size: 40rpx;
  color: orangered;
  z-index: 1;
  width: 60rpx;
}
.information .contact::before{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}


/*  底部提示  */
.tip{
  font-size: 24rpx;
  color: #a9a9a9;
  text-align: center;
  position: fixed;
  bottom: 175rpx;
  width: 100%;
}

/*  logo  */
.logo{
  position: fixed;
  width: 100%;
  text-align: right;
  height: 58rpx;
  right: 20rpx;
  bottom: 166rpx;
}
.logo > image{
  display: inline-block;
  width: 74rpx;
  height: 58rpx;
  position: relative;
  left: -38rpx;
}