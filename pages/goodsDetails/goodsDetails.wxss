/* pages/goodsDetail/goodsDetail.wxss */
@import '../template/detailModal/cartModal';
.detail{
  background-color: #f4f4f4;
   /* color: #868686; */
  letter-spacing: 0.1em;
}
.detailImg{
  width:100%;
  height:700rpx;
}

.detailImg-container image{
   width:100%;
  height:100%;
}
.first-content{
  background-color: #fff;
  padding-bottom: 30rpx;
}
.detail-title{
  font-size: 32rpx;
  padding:20rpx 30rpx;
}
.detail-price{
  margin: 20rpx;
  font-size: 1.15em;
  color:#fe7000;
  letter-spacing: 0;
}
.detail-count{
   margin:20rpx 30rpx 0;
   font-size: 0.8em;
   color:#818181;
}
.detail-count text {
  margin-right: 20rpx;
}
view.detail-detail-title{
  font-size: 32rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#818181;
}
.detail-detail-content{
  background-color: #fff;
  padding: 30rpx 20rpx;
  font-size: 32rpx;
}
.detail-Title{
  border-bottom: 2px solid #f4f4f4;
  padding-bottom: 30rpx;
}
.imgDetail{
  width: 100%;
}
.detail-type{
  margin: 20rpx 0 100rpx;
}
.detail-buy{
  width: 100%;
  height:90rpx;
  position: fixed;
  bottom: 0;
  left:0;
  font-size: 0.8em;
  background-color: #fff;
}
.detail-buy>view{
  width:43%;
  float:right;
  line-height: 90rpx; 
  text-align: center;
  background-color: #fe7000;
  color:#fff;
}
.detail-buy view:nth-child(2){
  background-color:#f4a522;
}
.detail-buy view:nth-child(3){
  width:14%;
  background-color:#fff;
  color: #868686;
  padding: 0;
  border-top: 1px solid #868686;
} 
.detail-buy .homeModal{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  /* height: 100%; */
}

.detail-buy view:nth-child(3) text{
  font-size: 2em
}
.iconCart{
  position:fixed;
  top: 20rpx;
  right: 20rpx;
  background-color:  rgba(51, 51, 51, 0.5);
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  text-align: center;
}
.iconCart>text{
  font-size: 1.3em;
  color: #fff;
}
/*评论内容  */
.reviewContent{
  padding: 20rpx 0;
  border-bottom:1px solid #f4f4f4; 
}
.reContent{
   font-size: 26rpx; 
  margin: 10rpx 0;
  color: #333;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;/*第几行显示省略号*/
  -webkit-box-orient: vertical;
}
.reTime{
  font-size: 20rpx;
  color: #818181;
}




