
.cartList{
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  padding: 20rpx 0 20rpx 80rpx;
  display: flex;
  font-size: 30rpx;
  margin: 5rpx 0;
  position: relative;
}
.cartList-del{
  position: absolute;
  top:40%;
  left:20rpx;
  height:40rpx;
  font-size: 44rpx;
  width:40rpx;
  background-color: red;
  color:white;
  text-align: center;
  line-height: 32rpx;
  border-radius: 100%;
}
.checkbox-group{
position: absolute;
  top:40%;
   left:20rpx;
}
.cart-checkbox{
   position: absolute;
    top:0; 
    left:0; 
   outline: 0;
   z-index: 1000;
   opacity: 0;
       /* visibility: hidden;      */
}
label{
    position: absolute;  
    width: 40rpx;  
     height: 40rpx;   
    top: 0;  
    left: 0;  
    background-color: orangered;  
    border-radius:100%;        
}
.isChecked:after {  
    opacity: 1;  
    content: '';  
    position: absolute;  
    width: 9px;  
    height: 5px;  
    background: transparent;  
    top: 6px;  
    left: 6px;  
    border: 2px solid #fff;  
    border-top: none;  
    border-right: none;  
    -webkit-transform: rotate(-45deg);  
    -moz-transform: rotate(-45deg);  
    -o-transform: rotate(-45deg);  
    -ms-transform: rotate(-45deg);  
    transform: rotate(-45deg);  
}  
 
.cartList-img{
  width: 190rpx;
  height:190rpx;
  margin-right: 20rpx;
}
.cartList-img>image{
  width:100%;
  height:100%;
}
.cartList-title{
  white-space:nowrap; 
  width:350rpx; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.cartList-price{
  margin-top: 10rpx;
  color:#FF4508;
}
.cartList-count{
  position: absolute;
  bottom: 30rpx;
  right:30rpx;
}
.cartList-count>text {
  display: inline-block;
  width: 50rpx;
  height:50rpx;
  background-color: gainsboro;
  text-align: center;
  line-height: 50rpx;
  margin: 30rpx 3rpx 0;
  border-radius: 2px;
}
