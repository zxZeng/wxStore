/* pages/goodsList/goodsList.wxss */

.goodsList {
  font-size: 24rpx;
  letter-spacing: 0.1em;
  color: #868686;
}

.bgWhite {
  background-color: #fff;
}

/*=========搜索框========  */

.header {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 0;
}

.search {
  margin: 10rpx 20rpx;
  overflow: hidden;
}

.searchReturn {
  float: left;
}

.searchReturn .icon-left {
  font-size: 60rpx;
}

.btnSearch {
  width: 20%;
  float: right;
  text-align: center;
  font-size: 28rpx;
  /* background-color: #f0f0f0; */
}

.searchInput {
  margin: 0 10rpx;
  width: 60%;
  padding: 10rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  float: left;
  color: #333;
  font-size: 24rpx;
}

.searchHolder {
  font-size: 24rpx;
}

/*顶部分类导航条  */

 .navbar {
  
   background-color: #fff; 
} 
.nav-1-left{
  border: 2px solid f3f3f3;
}
.nav-1 .item {
  width: 25%; 
  position: relative;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  color: gray;
  display: inline-block;
}

.nav-1 .item.active {
  color: black;
}

.nav-1 .item.active:after {
  content: "";
  width:60%;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  margin: 0 auto;
  background: black;
}
.iconDown{
  margin-left: 8rpx;
  transform: rotate(0deg);
  transition: all 0.3s;
  display: inline-block;
}
.iconUp{
  margin-left: 8rpx;
  transform: rotate(180deg);
  transition: all 0.3s;
  display: inline-block;
}
.navbarBtn {
  flex: 0 0 15%;
}

.blankblock {
  flex: 0 0 10%;
}

.picker-contain-bg {
  position: fixed;
  background-color: black;
  transition: all 1s;
  width: 100%;
  height: 100%;
  z-index: 1;
  top: 0;
  opacity: 0;
}

.picker-contain-bg.show {
  opacity: 0.5;
}

.picker-contain .item {
  background-color: RGB(215, 215, 215);
  border-radius: 20px;
  margin: 20rpx;
  padding: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: RGB(161, 161, 161);
}

.picker-contain .item.active {
  color: black;
  background-color: RGB(153, 153, 153);
}

swiper-item scroll-view {
  display: inline;
}

