.cuponesFrame > text{
  display: block;
  flex: 1 1 33.3%;
  text-align: center;
  position: relative;
  color: #a1a1a1;
}
.cuponesFrame > text:nth-last-of-type(1){
  flex: 1 1 33.4%;
}
.cuponesFrame .active{
  color:red;
}
.cuponesFrame .active::after{
  display: block;
  width: 100%;
  height: 4rpx;
  content: "";
  background-color: orangered;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}
/*  获取更多优惠券  */
.moreCupones{
  position: fixed;
  right: 50rpx;
  bottom: 100rpx;
  z-index: 1;
}
.moreCupones text{ 
  display: block;
  position: relative;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  font-size: 20rpx;
  color: red;
  text-align: center;
  background-color:red;
}
.moreCupones text::before{
  display: block;
  border: 1px solid red;
  margin:0 auto 10rpx;
  font-size: 34rpx;
  border-radius: 50%;
  width: 80%;
  height: 80%;
  line-height: 53rpx;
  color: white;
}

/*  优惠券  */
.cuponesBox{
  margin-top: 40rpx;
}
.cuponesOpt{
  width: 90%;
  margin: 30rpx auto;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff5ee;
  position: relative;
  border-radius: 8rpx;
}
.cuponesOpt text{
  display: block;
}
.cuponesOpt > text:nth-of-type(1){
  font-size: 34rpx;
  color: orangered;
}
.cuponesOpt > text:nth-of-type(2){
  font-size: 28rpx;
  color: #f4a460;
  margin: 12rpx 0 30rpx;
}
.cuponesOpt > text:nth-of-type(3){
  font-size: 24rpx;
  color: #818181;
}
/*  显示优惠类型  */
.discount{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.discount text{
  display: inline-block;
  color: orangered;
}
.discount .unit{
  font-size: 32rpx;
}
.discount .number{
  font-size: 56rpx;
}

/*  优惠券弹框  */
.moreCuponeseModel{
  position: fixed;
  background-color: white;
  width: 80%;
  top:300rpx;
  left: 10%;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: right;
  border-radius: 8rpx;
}
.moreCuponeseModel input{
  display: block;
  text-align: center;
  width: 100%;
  margin: 0 0 40rpx 0;
  border-bottom: 1px solid gainsboro;
  padding: 10rpx 0;
  font-size: 28rpx;
}
.moreCuponeseModel .input-placeholder{
  color: #dcdcdc;
}
.moreCuponeseModel button{
  display: inline-block;
  padding: 10rpx 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin: 0 10rpx;
  color: #818181;
}

.moreCuponeseModel button:nth-of-type(1){
  background-color: orangered;
  color: white;
}

/*  没有优惠券的提示  */
.noneOrderTip{
  text-align: center;
  font-size: 32rpx;
  padding: 50rpx 0;
  margin-top: 100rpx;
  color: #a1a1a1;
}
.cuponesStatus{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 24rpx;
  color: #ff1493;
}
