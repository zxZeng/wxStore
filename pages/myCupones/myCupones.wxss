.container-box{
  padding: 80rpx 0 0 0;
}

/*  优惠券使用状态  */
.cuponesFrame{
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 100%;
  font-size: 24rpx;
  line-height: 80rpx;
  background-color: #fff5ee;
  z-index:2;
  border-top: 1px #ffda89 solid;
  border-bottom: 1px solid #ffda89;
}
